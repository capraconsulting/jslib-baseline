{
  "name": "jslib-baseline",
  "version": "0.0.1",
  "description": "Baseline for creating js libs",
  "main": "lib/index.js",
  "source": "src/index.ts",
  "scripts": {
    "build": "rimraf lib && microbundle -o lib -f cjs --name jslib-baseline --sourcemap false",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prettier": "prettier --config ./.prettierrc --write 'src/**/*.ts'"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "24.0.3",
    "jest": "24.1.0",
    "jest-each": "24.0.0",
    "microbundle": "0.9.0",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3"
  }
}
