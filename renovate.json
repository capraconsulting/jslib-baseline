{
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "linting",
      "packagePatterns": ["tslint", "prettier"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "jest",
      "packagePatterns": ["jest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "typescript",
      "packagePatterns": ["typescript", "^@types/"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "rimraf",
      "packagePatterns": ["^rimraf$"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "pin": {
    "automerge": true
  }
}
